<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.AdminDashboardController"
            fx:id="mainPane"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #bfbfbf;">

    <!-- Top Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: black;">
            <padding>
                <Insets top="12" right="12" bottom="12" left="20"/>
            </padding>
            <Label text="Admin Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Left Navigation -->
   <left>
    <VBox spacing="15" prefWidth="220" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
        <padding>
            <Insets top="25" left="15" right="15" bottom="20"/>
        </padding>

        <Button text="User Management" onAction="#handleUserManagement"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="View Attendance" onAction="#handleAttendance"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="Leave Requests" onAction="#handleLeaveRequests"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="Permission Requests" onAction="#handlePermissionRequests"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="Activity Log" onAction="#handleActivityLog"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="Mail Notifications" onAction="#handleMailNotifications"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="Profile Settings" onAction="#handleProfileSettings"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

       
        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                
                <Button text="Change Password" onAction="#handleChangePassword"
        style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                

    </VBox>
</left>
   

    <!-- Center Dynamic Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #1a1a2e; -fx-background-radius: 8;">
            <!-- All other admin screens (UserManagement, ActivityLog, etc.) will load dynamically here -->
        </StackPane>
    </center>

    <!-- Padding -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
