<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane"

			xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.QRActionController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #bfbfbf;">

    <!-- Top Section: Employee Info -->
    <top>
      <VBox alignment="CENTER" spacing="5">
    <padding>
        <Insets top="20" right="0" bottom="10" left="0"/>
    </padding>
      
           
        </VBox>
    </top>

    <!-- Center Section: Buttons -->
    <center>
        <GridPane hgap="60" vgap="30" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER"/>
                <ColumnConstraints halignment="CENTER"/>
            </columnConstraints>

            <!-- First Row -->
            <Button fx:id="btnLogin" text="Login"
                    GridPane.rowIndex="0" GridPane.columnIndex="0"
                    onAction="#handleLogin"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 8; -fx-pref-width: 200; -fx-pref-height: 60;"/>
            <Button fx:id="btnLogout" text="Logout"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"
                    onAction="#handleLogout"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 8; -fx-pref-width: 200; -fx-pref-height: 60;"/>

            <!-- Second Row -->
            <Button fx:id="btnAskPermission" text="Ask Permission"
                    GridPane.rowIndex="1" GridPane.columnIndex="0"
                    onAction="#handleAskPermission"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 8; -fx-pref-width: 200; -fx-pref-height: 60;"/>
            <Button fx:id="btnAskLeave" text="Ask Leave"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"
                    onAction="#handleAskLeave"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 8; -fx-pref-width: 200; -fx-pref-height: 60;"/>

            <!-- Third Row -->
            <Button fx:id="btnBreak" text="Break"
                    GridPane.rowIndex="2" GridPane.columnIndex="0"
                    onAction="#handleBreak"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 8; -fx-pref-width: 200; -fx-pref-height: 60;"/>
            <Button fx:id="btnViewProfile" text="View Profile"
                    GridPane.rowIndex="2" GridPane.columnIndex="1"
                    onAction="#handleViewProfile"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: black; -fx-background-radius: 8; -fx-pref-width: 200; -fx-pref-height: 60;"/>
                    
        </GridPane>
    </center>

    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
