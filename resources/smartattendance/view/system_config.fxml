<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.SystemConfigController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f4f6f8; -fx-font-family: 'Segoe UI';">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="System Configuration"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: #f4f6f8; -fx-padding: 30 0 0 0;">
            
            <!-- Working Hours -->
            <TitledPane text="Working Hours Settings"
                        expanded="true"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Office Start Time:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtStartTime" promptText="09:00 AM"
                                   style="-fx-pref-width: 150; -fx-background-radius: 8;"/>
                        <Label text="End Time:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtEndTime" promptText="06:00 PM"
                                   style="-fx-pref-width: 150; -fx-background-radius: 8;"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Minimum Working Hours:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtMinHours" promptText="8"
                                   style="-fx-pref-width: 100; -fx-background-radius: 8;"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Break Configuration -->
            <TitledPane text="Break Configuration"
                        expanded="false"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Max Breaks Per Day:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtMaxBreaks" promptText="2"
                                   style="-fx-pref-width: 100; -fx-background-radius: 8;"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Max Break Duration (mins):" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtMaxBreakDuration" promptText="15"
                                   style="-fx-pref-width: 100; -fx-background-radius: 8;"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Email Configuration -->
            <TitledPane text="Email Notifications"
                        expanded="false"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="SMTP Server:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtSMTP" promptText="smtp.gmail.com"
                                   style="-fx-pref-width: 250; -fx-background-radius: 8;"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Port:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtPort" promptText="587"
                                   style="-fx-pref-width: 100; -fx-background-radius: 8;"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Sender Email:" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtEmail" promptText="example@gmail.com"
                                   style="-fx-pref-width: 250; -fx-background-radius: 8;"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Password:" style="-fx-font-size: 14px;"/>
                        <PasswordField fx:id="txtPassword" promptText="********"
                                       style="-fx-pref-width: 200; -fx-background-radius: 8;"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Action Buttons -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 30 0 20 0;">
                <Button fx:id="btnSave" text="Save Changes"
                        onAction="#handleSave"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 12;
                               -fx-pref-width: 150; -fx-pref-height: 35;"/>
                <Button fx:id="btnReset" text="Reset"
                        onAction="#handleReset"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 12;
                               -fx-pref-width: 120; -fx-pref-height: 35;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
