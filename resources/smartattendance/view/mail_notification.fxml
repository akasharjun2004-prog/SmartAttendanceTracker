<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.MailNotificationController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f4f6f8;">

    <!-- ===== Top Bar ===== -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label text="Mail Notifications"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnRefresh"
                    text="â†» Refresh"
                    onAction="#handleRefresh"
                    style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;"
                    prefWidth="110" prefHeight="32"/>
        </HBox>
    </top>

    <!-- ===== Center Table ===== -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-background-color: #f4f6f8;">
            <padding>
                <Insets top="20" right="25" bottom="20" left="25"/>
            </padding>

            <TableView fx:id="tblMailNotifications" prefHeight="500" prefWidth="950">
                <columns>
                    <TableColumn fx:id="colRecipient" text="Recipient" prefWidth="220"/>
                    <TableColumn fx:id="colSubject" text="Subject" prefWidth="300"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="200"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="180"/>
                </columns>
            </TableView>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnViewDetails"
                        text="View Details"
                        onAction="#handleViewDetails"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;"
                        prefWidth="140" prefHeight="35"/>

                <Button fx:id="btnDeleteAll"
                        text="Clear All"
                        onAction="#handleDeleteAll"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;"
                        prefWidth="140" prefHeight="35"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
