<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.PermissionRequestsController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f4f6f8;">

    <!-- ===== Top Bar ===== -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" left="15" right="10" bottom="10"/>
            </padding>
            <Label text="Permission Requests Management"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- ===== Center Content ===== -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #f4f6f8;">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <TableView fx:id="tblPermissionRequests" prefHeight="500" prefWidth="900">
                <columns>
                    <TableColumn fx:id="colEmployeeName" text="Employee Name" prefWidth="220"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="160"/>
                    <TableColumn fx:id="colReason" text="Reason" prefWidth="360"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="160"/>
                </columns>
            </TableView>

            <HBox spacing="25" alignment="CENTER">
                <Button fx:id="btnApprove" text="Approve"
                        onAction="#handleApprove"
                        style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;"
                        prefWidth="130" prefHeight="38"/>

                <Button fx:id="btnReject" text="Reject"
                        onAction="#handleReject"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;"
                        prefWidth="130" prefHeight="38"/>

                <Button fx:id="btnViewDetails" text="View Details"
                        onAction="#handleViewDetails"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;"
                        prefWidth="150" prefHeight="38"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
