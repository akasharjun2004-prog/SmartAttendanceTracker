<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.AttendanceController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: white;">

    <!-- ðŸ”¹ Top Header Bar -->
    <top>
        <HBox spacing="10" style="-fx-padding:15; -fx-background-color:#2d3436; -fx-alignment:CENTER_LEFT;">
            <Label text="ðŸ“… View Attendance Records"
                   style="-fx-text-fill:white; -fx-font-size:20; -fx-font-weight:bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <DatePicker fx:id="datePicker"
                        promptText="Select Date"
                        style="-fx-background-radius:8; -fx-padding:6;" />
            <Button text="ðŸ” Filter"
                    onAction="#handleFilter"
                    style="-fx-background-color:#0984e3; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:6 14;" />
            <Button text="âŸ³ Refresh"
                    onAction="#handleRefresh"
                    style="-fx-background-color:#636e72; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:6 14;" />
        </HBox>
    </top>

    <!-- ðŸ”¹ Center: Table -->
    <center>
        <VBox spacing="10" style="-fx-padding:15;">
            <TableView fx:id="attendanceTable"
                       style="-fx-background-color:white; -fx-border-color:#dfe6e9; -fx-border-radius:8;"
                       prefHeight="520">
                <columns>
                    <TableColumn fx:id="colEmployeeId" text="Employee ID" prefWidth="120" />
                    <TableColumn fx:id="colName" text="Name" prefWidth="200" />
                    <TableColumn fx:id="colDate" text="Date" prefWidth="120" />
                    <TableColumn fx:id="colLoginTime" text="Login Time" prefWidth="150" />
                    <TableColumn fx:id="colLogoutTime" text="Logout Time" prefWidth="150" />
                    <TableColumn fx:id="colTotalHours" text="Total Hours" prefWidth="120" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="lblStatus"
                       text="Showing all records"
                       style="-fx-font-size:13; -fx-text-fill:#636e72;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
