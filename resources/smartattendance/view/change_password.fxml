<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smartattendance.controller.ChangePasswordController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f4f6f8;">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT"
              prefHeight="60"
              style="-fx-background-color: black;">
            <padding>
                <Insets left="20"/>
            </padding>
            <Label text="Change Password"
                   style="-fx-text-fill: white;
                          -fx-font-size: 20px;
                          -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center -->
    <center>
        <VBox alignment="CENTER" spacing="25">

            <Label text="Enter your current and new password details"
                   style="-fx-font-size: 15px;
                          -fx-text-fill: #2c3e50;"/>

            <!-- ðŸ”¥ FORM + BUTTONS WRAPPED TOGETHER -->
            <VBox alignment="CENTER" spacing="20">

                <!-- FORM -->
                <GridPane alignment="CENTER"
          hgap="15" vgap="15"
          maxWidth="350">

                    <columnConstraints>
    <ColumnConstraints halignment="RIGHT"/>
    <ColumnConstraints/>
</columnConstraints>


                    <Label text="Old Password:"/>
                    <PasswordField fx:id="txtOldPassword"
                                   GridPane.columnIndex="1"
                                   prefWidth="180"
                                   maxWidth="180"/>

                    <Label text="New Password:" GridPane.rowIndex="1"/>
                    <PasswordField fx:id="txtNewPassword"
                                   GridPane.rowIndex="1"
                                   GridPane.columnIndex="1"
                                   prefWidth="180"
                                   maxWidth="180"/>

                    <Label text="Confirm Password:" GridPane.rowIndex="2"/>
                    <PasswordField fx:id="txtConfirmPassword"
                                   GridPane.rowIndex="2"
                                   GridPane.columnIndex="1"
                                   prefWidth="180"
                                   maxWidth="180"/>
                </GridPane>

                <!-- MESSAGE -->
                <Label fx:id="lblMessage"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: bold;"/>

                <!-- BUTTONS -->
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="btnChangePassword"
                            text="Change Password"
                            prefWidth="180"
                            prefHeight="38"
                            onAction="#handleChangePassword"
                            style="-fx-background-color: #0f3460;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnCancel"
                            text="Cancel"
                            prefWidth="100"
                            prefHeight="38"
                            onAction="#handleCancel"
                            style="-fx-background-color: #e74c3c;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 10;"/>
                </HBox>

            </VBox>
        </VBox>
    </center>

</BorderPane>


